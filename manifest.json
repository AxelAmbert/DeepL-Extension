{
    "name": "Translate with DeepL",
    "version": "1.0",
    "description": "Grab a text and trigger a translation on DeepL website",
    
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "page_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/deepl16.png",
            "32": "images/deepl32.png",
            "48": "images/deepl48.png",
            "128": "images/deepl128.png"
          }
      },
    "permissions": ["activeTab", "storage", "declarativeContent", "contextMenus", "tabs"],
    "icons": {
        "16": "images/deepl16.png",
        "32": "images/deepl32.png",
        "48": "images/deepl48.png",
        "128": "images/deepl128.png"
      },
    "manifest_version": 2
}
